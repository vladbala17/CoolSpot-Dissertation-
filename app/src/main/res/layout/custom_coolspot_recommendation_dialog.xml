<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_menu"
    android:orientation="vertical">

    <TextView
        android:id="@+id/place_details_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/side_nav_bar"
        android:gravity="center"
        android:text="Place Recommendation"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/iv_coolspot_popular_coolpoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/place_details_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_basketball_avatar" />

    <TextView
        android:id="@+id/tv_coolspot_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_coolspot_popular_coolpoint"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="" />

    <TextView
        android:id="@+id/tv_coolspot_name_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_coolspot_name"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="3dp"
        android:text="Cluj Arena"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv_coolspot_popularity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_coolspot_name_value"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="" />

    <TextView
        android:id="@+id/tv_coolspot_popularity_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_coolspot_popularity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:text="5 cai"/>

    <TextView
        android:id="@+id/tv_coolspot_popularity_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/tv_coolspot_popularity_value"
        android:layout_centerHorizontal="true"
        android:text=" people are there right now" />

    <TextView
        android:id="@+id/tv_coolspot_mutual_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_coolspot_popularity_value"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="" />

    <TextView
        android:id="@+id/tv_coolspot_mutual_friends_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_coolspot_mutual_friends"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:text="3 of your friends are there" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_coolspot_mutual_friends_value"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/keep_looking_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/side_nav_bar"
            android:text="No thanks" />

        <Button
            android:id="@+id/take_me_there_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/side_nav_bar"
            android:text="Take me there" />


    </LinearLayout>

</RelativeLayout>