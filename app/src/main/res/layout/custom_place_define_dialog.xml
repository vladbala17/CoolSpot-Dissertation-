<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_menu">

    <TextView
        android:id="@+id/place_define_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/side_nav_bar"
        android:gravity="center"
        android:text="Place Name"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/place_define_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/place_define_name"
        android:text="What is cool" />

    <SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/place_define_tv"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="#eacded" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/styles_galery"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_below="@+id/search_view"
        android:layout_margin="20dp"
        android:background="#eacded"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:scrollbars="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/styles_galery"
        android:layout_alignStart="@+id/styles_galery"
        android:layout_below="@+id/styles_galery"
        android:orientation="horizontal">

        <Button
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:background="@color/colorPrimary"
            android:text="Keep looking" />

        <Button
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:background="@color/colorPrimary"
            android:text="Take me there" />

    </LinearLayout>


</RelativeLayout>